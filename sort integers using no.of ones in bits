class Solution {
    public int[] sortByBits(int[] arr) {
        Integer[] temp=Arrays.stream(arr).boxed().toArray(Integer[]::new);
        Arrays.sort(temp,(a,b)->{
            int ca=Integer.bitCount(a);
            int cb=Integer.bitCount(b);
            if(ca==cb){
                return a-b;
            }
            return ca-cb;
        });
        for(int i=0;i<arr.length;i++){
            arr[i]=temp[i];
        }
        return arr;
    }
}

code language: 
        JAVA
time complexity:
        O(n log n)
space complexity:
        O(n)
